@page
@model AplicatieLicenta.Pages.Admin.AdaugareCartiAudioModel
@{
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/adaugareCarte.css" />

<div class="container-adaugare">
    <h2>Adaugă o Carte Audio</h2>
    <form method="post" action="/Admin/AdaugareCarteAudio">
        <input type="hidden" name="tip_carte" value="Audio" />

        <label for="titlu">Titlu:</label>
        <input type="text" id="titlu" name="titlu" required />

        <label for="autor">Autor:</label>
        <input type="text" id="autor" name="autor" required />

        <!-- Durata de ascultare -->
        <label for="DurataAscultare">Durata Ascultare:</label>
        <input type="time" id="DurataAscultare" name="DurataAscultare" step="1" required
               style="padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px; width: 100%;" />

        <!-- Drag and Drop pentru Imagine Copertă -->
        <label for="Imagine_Coperta">Imagine Copertă:</label>
        <div id="dropzone-coperta" class="dropzone">
            <p>Trage și plasează imaginea de copertă aici sau apasă pentru a selecta</p>
            <img id="preview-coperta" src="#" alt="Preview imagine copertă" style="display: none;" />
            <input type="file" id="Imagine_Coperta" name="Imagine_Coperta" accept="image/*" />
        </div>

        <!-- Drag and Drop pentru Fișier Audio -->
        <label for="url_fisier">Fișier Audio:</label>
        <div id="dropzone-audio" class="dropzone">
            <p>Trage și plasează fișierul audio aici sau apasă pentru a selecta</p>
            <input type="file" id="url_fisier" name="url_fisier" accept="audio/mpeg" />
        </div>

        <label for="categorie_varsta">Categorie Vârstă:</label>
        <select id="categorie_varsta" name="categorie_varsta" required>
            <option value="Sub 8 ani">Sub 8 ani</option>
            <option value="8-10 ani">8-10 ani</option>
            <option value="10-12 ani">10-12 ani</option>
            <option value="12-14 ani">12-14 ani</option>
        </select>

        <button type="submit">Adaugă Carte Audio</button>
    </form>
</div>
<script src="~/js/adaugareCarteAudio.js"></script>

