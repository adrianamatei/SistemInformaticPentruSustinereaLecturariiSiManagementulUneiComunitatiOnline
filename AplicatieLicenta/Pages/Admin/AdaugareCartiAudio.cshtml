@page
@model AplicatieLicenta.Pages.Admin.AdaugareCartiAudioModel
@{
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/adaugareCarte.css" />

<div class="container-adaugare">
    <h2>Adaugă o Carte Audio</h2>
    @if (!string.IsNullOrEmpty(Model.messageError))
    {
        <div class="alert alert-danger mt-2">
            @Model.messageError
        </div>
    }
    <form method="post" enctype="multipart/form-data" >
        <input type="hidden" asp-for="tip_carte" value="Audio" />
     

        <label for="titlu">Titlu:</label>
        <input type="text" id="titlu" asp-for="titlu" class="form-control" />
        

        <label for="autor">Autor:</label>
        <input type="text" id="autor" asp-for="autor"  class="form-control" />
        

        <div style="display: flex; gap: 10px; align-items: center;">
            <label for="ore">Ore:</label>
            <input type="number" id="ore" asp-for="ore" min="0" step="1"  class="form-control"
                   style="width: 60px; padding: 8px; text-align: center; border: 1px solid #ddd; border-radius: 5px;" />
           

            <label for="minute">Minute:</label>
            <input type="number" id="minute" asp-for="minute" min="0" max="59" step="1" class="form-control" 
                   style="width: 60px; padding: 8px; text-align: center; border: 1px solid #ddd; border-radius: 5px;" />
            

            <label for="secunde">Secunde:</label>
            <input type="number" id="secunde" asp-for="secunde" min="0" max="59" step="1" class="form-control" 
                   style="width: 60px; padding: 8px; text-align: center; border: 1px solid #ddd; border-radius: 5px;" />
           
        </div>

        <label for="Imagine_Coperta">Imagine Copertă:</label>
        <div id="dropzone-coperta" class="dropzone">
            <p>Trage și plasează imaginea de copertă aici sau apasă pentru a selecta</p>
            <img id="preview-coperta" src="#" alt="Preview imagine copertă" style="display: none;" />
            <input type="file" id="Imagine_Coperta" asp-for="Imagine_Coperta" accept="image/*" />
            
        </div>

        
        <label for="url_fisier">Fișier Audio:</label>
        <div id="dropzone-audio" class="dropzone">
            <p>Trage și plasează fișierul audio aici sau apasă pentru a selecta</p>
            <input type="file" id="url_fisier" asp-for="url_fisier" accept="audio/mpeg" />
            
        </div>

        <label for="categorie_varsta">Categorie varsta:</label>
        <div>
            <input type="checkbox" id="sub8" name="categorie_varsta" value="Sub 8 ani" />
            <label for="sub8">Sub 8 ani</label>
            <input type="checkbox" id="8_10" name="categorie_varsta" value="8-10 ani" />
            <label for="8_10">8-10 ani</label>
            <input type="checkbox" id="10_12" name="categorie_varsta" value="10-12 ani" />
            <label for="10_12">10-12 ani</label>
            <input type="checkbox" id="12_14" name="categorie_varsta" value="12-14 ani" />
            <label for="12_14">12-14 ani</label>
            <input type="checkbox" id="peste14" name="categorie_varsta" value="Peste 14 ani" />
            <label for="peste14">Peste 14 ani</label>
        </div>
        <label for="gen">Gen</label>
        <div>
            <input type="checkbox" id="aventura" name="gen" value="Aventura" />
            <label for="aventura">Aventura</label>
            <input type="checkbox" id="fictiune" name="gen" value="Fictiune" />
            <label for="fictiune">Fictiune</label>
            <input type="checkbox" id="fantezie" name="gen" value="Fantezie" />
            <label for="fantezie">Fantezie</label>
            <input type="checkbox" id="basm" name="gen" value="Basm" />
            <label for="basm">Basm</label>
        </div>
        <button type="submit">Adaugă Carte Audio</button>
       
    </form>
</div>
<script src="~/js/adaugareCarteAudio.js"></script>
<style>
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        border: 1px solid #f5c6cb;
        margin-bottom: 10px;
    }
</style>
 