@page
@model AplicatieLicenta.Pages.Admin.StergereCartiModel

@{
    ViewData["Title"] = "StergereCarti";
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}

<h1>Stergere carti</h1>

<h3>Esti sigur ca vrei sa stergi aceasta carte ?</h3>
<div>
    <h4>Carti</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carti.Titlu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carti.Titlu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carti.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carti.Autor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carti.DurataAscultare)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carti.DurataAscultare)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carti.ImagineCoperta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carti.ImagineCoperta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carti.DataAdaugarii)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carti.DataAdaugarii)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carti.UrlFisier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carti.UrlFisier)
