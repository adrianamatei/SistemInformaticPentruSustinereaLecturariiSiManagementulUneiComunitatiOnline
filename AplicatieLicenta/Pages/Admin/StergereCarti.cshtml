        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carti.CategorieVarsta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carti.CategorieVarsta)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Carti.IdCarte" />
        <input type="submit" value="Stergere" class="btn btn-danger" /> 
        <a asp-page="/Admin/VizualizareCartiPdf" class="custom-link">Renunta la stergerea cartii </a>
    </form>
</div>
