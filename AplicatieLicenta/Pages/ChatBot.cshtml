    @page
    @model AplicatieLicenta.Pages.ChatBotModel
    @{
        Layout = "~/Pages/Shared/_Layout.cshtml";
    }

    <link rel="stylesheet" href="~/css/ChatBot.css" />

    <div class="chat-container">
        <div class="chat-header">
            <img src="~/images/BotHome.jpg" alt="Samy Bot" class="bot-avatar" />
            <h2>Discută cu <span class="bot-name">AlfaBot</span> pentru curiozitati !</h2>
        </div>

    <div class="chat-box" id="chatBox">
        @if (Model.ConversationHistory != null)
        {
            foreach (var msg in Model.ConversationHistory)
            {
                if (msg.Role == "user")
                {
                    <div class="message user-message">@msg.Message</div>
                }
                else if (msg.Role == "bot")
                {
                    <div class="message bot-message">@msg.Message</div>
                }
            }
        }
    </div>

        <form method="post" class="chat-form">
<textarea name="UserMessage" placeholder="Scrie un mesaj..." required></textarea>
        <button type="submit">Trimite</button>
        </form>
    </div>

    <script>
        const chatBox = document.getElementById("chatBox");
        if (chatBox) chatBox.scrollTop = chatBox.scrollHeight;
    </script>