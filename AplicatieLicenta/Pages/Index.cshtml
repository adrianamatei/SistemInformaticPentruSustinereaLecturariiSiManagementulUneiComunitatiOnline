@page
@model AplicatieLicenta.Pages.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link rel="stylesheet" href="/css/welcome.css" />
</head>
<body>
    <header>
        <nav class="custom-navbar">
            <div class="custom-container">
                <a href="/Index" class="custom-brand">BookHaven</a>
                <div class="custom-nav-items">
                    <a href="/Index" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/home.png" alt="Home" />
                        <span>Home</span>
                    </a>
                    <a href="/Login" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/loginreader.png" alt="Login" />
                        <span>Autentificare</span>
                    </a>
                    <a href="/Users/VizualizarePDF" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/cartipdf.png" alt="Carti PDF" />
                        <span>Carti PDF</span>
                    </a>
                    <a href="/Users/VizualizareAudio" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/cartiaudio.png" alt="Carti Audio" />
                        <span>Carti Audio</span>
                    </a>
                    <a href="/Recenzii" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/review.png" alt="Recenzii" />
                        <span>Recenzii</span>
                    </a>
                    <a href="/AboutUs" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/about_us.png" alt="AboutUs" />
                        <span>Despre</span>
                    </a>
                    <a href="/Contact" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/contact.png" alt="Contact" />
                        <span>Contact</span>
                    </a>
                    <a href="/ChatBot" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/chatbot.png" alt="ChatBot" />
                        <span>ChatBot</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="main-container">
        <!-- Vertical Carousel -->
        <div class="carousel">
            <div class="carousel-inner">
                <div class="carousel-item">
                    <img src="/images/Carousel/alice_in_tara_minunilor.png" alt="Alice în Țara Minunilor">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/aventuri_pinocchio.jpg" alt="Aventurile lui Pinocchio">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/heidi_fetita_muntilor.png" alt="Heidi, fetița munților">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/micul_print.png" alt="Micul Prinț">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/print_si_cersetor.png" alt="Prinț și cerșetor">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/vrajitorul_din_oz.png" alt="Vrăjitorul din Oz">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/alba ca zapada.jpg" alt="Alba ca Zapada">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/avneturile lui sherlock.jpg" alt="Aventurile lui Sherlock">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/degetica.jpg" alt="degetica">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/insula misterioasa.jpg" alt="insula misterioasa">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/romeo si julieta.jpeg" alt="romeo si julieta">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/trifon habaucul.jpg" alt="trifon habaucul">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/regatul podului.jpg" alt="regatul podului">
                </div>
            </div>
        </div>

        <section style="margin-top: 30px; margin-bottom: 50px; text-align: center;">
            <div style="display: inline-block; text-align: center; margin-left: 200px;">
                <h2 style="font-size: 1.8rem; color: #000000; margin-bottom: 25px; display: flex; align-items: center; justify-content: center; gap: 10px;">
                    <img src="~/images/recomandarea_zilei.jpeg" alt="Icon" style="width: 30px; height: auto;" />
                    Recomandarea zilei
                </h2>


                @if (Model.Recomandare != null)
                {
                    <div>
                        <img src="@Model.Recomandare.ImagineCoperta"
                             alt="@Model.Recomandare.Titlu"
                             style="width: 180px; height: auto; border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);" />

                        <h5 style="margin-top: 12px; font-size: 1.1rem; color: #3c2e1a;">@Model.Recomandare.Titlu</h5>
                        <p style="margin-top: 3px; font-style: italic; color: #666; font-size: 0.95rem;">
                            @Model.Recomandare.Autor
                        </p>
                    </div>
                }

                <!-- Mesaj și buton -->
                <div style="margin-top: 30px;">
                    <p style="font-size: 1.1rem; color: #444; font-weight: 500; margin-bottom: 15px;">
                        Primul pas pentru a începe aventura
                    </p>
                    <a href="/Users/Inregistrare"
                       class="btn"
                       style="background-color: #C8AD7F; color: white; font-weight: bold; padding: 8px 20px; border-radius: 6px; font-size: 1rem; text-decoration: none;">
                         Înregistrare
                    </a>
                </div>
            </div>
        </section>


    </div>

    <a href="/ChatBot" class="robotel-widget">
        <div class="robotel-tooltip">Psst! Te ajut?</div>
        <img src="~/images/BotHome.jpg" alt="Robotel Asistent" class="robotel-icon" />
    </a>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookHaven - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="/js/carousel.js"></script>
</body>
</html>
