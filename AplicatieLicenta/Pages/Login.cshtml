@page
@model AplicatieLicenta.Pages.Users.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login as Reader or Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/site.css" />

    <style>
        .custom-navbar {
            width: 100%;
            background-color: #ffffff;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            top: 0;
            z-index: 1000;
            height: 70px;
            justify-content: center;
        }

        /* Container pentru conținutul navbar-ului */
        .custom-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Stil pentru logo */
        .custom-brand {
            font-family: 'Georgia', serif;
            font-size: 1.8rem;
            color: #C8AD7F;
            font-weight: bold;
            text-decoration: none;
            margin-right: auto; /* Păstrează logo-ul în stânga */
        }

            .custom-brand:hover {
                color: #C8A57D;
            }

        /* Meniu de navigare */
        .custom-nav-items {
            display: flex;
            gap: 20px; /* Reducem spațiul dintre elementele meniului */
            list-style: none;
            margin: 0;
            padding: 0;
            justify-content: flex-end; /* Centrează mai bine conținutul pe dreapta */
        }

        /* Stil pentru fiecare link din meniu */
        .custom-nav-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #333333;
            font-size: 1rem;
            transition: color 0.3s ease;
        }

            .custom-nav-link img {
                width: 25px; /* Dimensiune mai mică pentru iconițe */
                height: 25px;
                margin-right: 5px; /* Spațiu redus între icon și text */
            }

            .custom-nav-link:hover {
                color: #C8A57D;
            }

        /* Compensare pentru navbar fix */
        body {
            margin: 0;
            padding-top: 80px;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

    </style>
</head>
<body>
    <nav class="custom-navbar">
        <div class="custom-container">
            <a href="/Index" class="custom-brand">BookHaven</a>
            <div class="custom-nav-items">
                <a href="/Index" class="custom-nav-link">
                    <img src="~/images/MeniuNavigare/home.png" alt="Home" />
                    <span>Home</span>
                </a>
                <a href="/Login" class="custom-nav-link">
                    <img src="~/images/MeniuNavigare/loginreader.png" alt="Login" />
                    <span>Autentificare</span>
                </a>
                <a href="/CartiPDF" class="custom-nav-link">
                    <img src="~/images/MeniuNavigare/cartipdf.png" alt="Carti PDF" />
                    <span>Carti PDF</span>
                </a>
                <a href="/CartiAudio" class="custom-nav-link">
                    <img src="~/images/MeniuNavigare/cartiaudio.png" alt="Carti Audio" />
                    <span>Carti Audio</span>
                </a>
                <a href="/Recenzii" class="custom-nav-link">
                    <img src="~/images/MeniuNavigare/review.png" alt="Recenzii" />
                    <span>Recenzii</span>
                </a>
                <a href="/AboutUs" class="custom-nav-link">
                    <img src="~/images/MeniuNavigare/about_us.png" alt="AboutUs" />
                    <span>Despre</span>
                </a>
                <a href="/ChatBot" class="custom-nav-link">
                    <img src="~/images/MeniuNavigare/chatbot.png" alt="ChatBot" />
                    <span>ChatBot</span>
                </a>
            </div>
        </div>
    </nav>
    <div class="container" id="container">
        <!-- Logare Administrator -->
        <div class="form-container admin-login-container">
            <form asp-page-handler="LoginAdmin" method="post">
                <h1>Logare Administrator</h1>
                <span>Introduceți credențialele de administrator</span>

                <div class="input-group">
                    <input type="text" placeholder="Email" name="Email" value="@Model.Email" />
                    <i class="fas fa-envelope icon-right"></i>
                </div>

                <div class="input-group">
                    <input type="password" placeholder="Parolă" name="Password" />
                    <i class="fas fa-lock icon-right"></i>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessageAdmin))

                {
                    <div class="alert alert-danger mt-2">
                        @Model.ErrorMessageAdmin
                    </div>
                }

                <button type="submit">Logare</button>
            </form>
        </div>

        <!-- Logare Cititor -->
        <div class="form-container sign-in-container">
            <form asp-page-handler="LoginReader" method="post">
                <h1>Logare Cititor</h1>
                <span>Introduceți datele pentru a accesa contul de cititor</span>

                <div class="input-group">
                    <input type="email" placeholder="Email" name="Email" value="@Model.Email" />
                    <i class="fas fa-envelope icon-right"></i>
                </div>

                <div class="input-group">
                    <input type="password" placeholder="Parolă" name="Password" />
                    <i class="fas fa-lock icon-right"></i>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessageReader))



                {
                    <div class="alert alert-danger mt-2">
                        @Model.ErrorMessageReader
                    </div>
                }

                <a href="/Users/ResetareParola" class="forgot-password-link">Ați uitat parola?</a>
                <button type="submit" class="login-button">Logare</button>
                <a asp-page="/Users/Inregistrare" class="create-account-link">Nu ai cont? <strong>Înregistrează-te</strong></a>
            </form>
        </div>

        <!-- Overlay -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <img src="/images/login_cititor.jpg" alt="Imagine Cititor" class="overlay-image">
                    <button class="ghost" id="signInReader">Logare Cititor</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <img src="/images/admin.jpg" alt="Imagine Administrator" class="overlay-image">
                    <button class="ghost" id="signInAdmin">Logare Administrator</button>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/login.js"></script>

</body>
</html>