@page
@model AplicatieLicenta.Pages.RecenziiModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4 text-center" style="color: #C8AD7F;">Recenzii pentru toate cărțile</h2>

    @if (Model.Recenzii != null && Model.Recenzii.Any())
    {
        <div class="row">
            @foreach (var carte in Model.Recenzii)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0" style="background-color: #fdf7ee;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fw-bold mb-1">@carte.Titlu</h5>
                                <p class="mb-0 text-muted">Autor: @carte.Autor</p>
                            </div>
                            <div class="text-end">
                                <span class="fw-bold" style="color: #C8AD7F; font-size: 1.2rem;">
                                    Rating mediu:
                                </span>
                                <div class="fs-4">@carte.RatingMediu.ToString("0.0") / 5</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted mt-5">Nu există recenzii disponibile momentan.</p>
    }
</div>

