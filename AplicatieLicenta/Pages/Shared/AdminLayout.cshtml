<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Panel</title>
    <meta name="description" content="Admin Panel">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* Panou stânga */
       #left-panel {
    width: 250px;
    background-color: #ffffff;
    color: #C8AD7F;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 20px;
    box-shadow: 5px 0 10px rgba(0, 0, 0, 0.1);
}

#main-menu {
    width: 100%;
    flex: 1;
    overflow-y: auto; /* ADĂUGAT */
}


            /* Imagine logo */
            #left-panel img {
                display: block;
                width: 80px; /* Dimensiune pătrată */
                height: 80px; /* Dimensiune pătrată */
                object-fit: cover; /* Taie imaginea pentru a se încadra */
                margin-bottom: 20px;
            }

            /* Textul logo */
            #left-panel h1 {
                font-family: 'Arial', sans-serif;
                font-size: 24px;
                color: #C8AD7F;
                margin: 10px 0;
            }

        /* Meniu */
        #main-menu {
            width: 100%;
        }

            #main-menu ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            #main-menu li {
                text-align: center;
                margin: 10px 0;
            }

                #main-menu li a {
                    display: block;
                    text-decoration: none;
                    color: #C8AD7F; /* Text crem */
                    background-color: #ffffff; /* Fundal alb pentru opțiuni */
                    padding: 12px 20px; /* Spațiere interioară */
                    border-radius: 8px; /* Colțuri rotunjite */
                    font-size: 16px; /* Dimensiunea fontului mărită */
                    font-weight: bold; /* Face textul mai gros */
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Umbră pentru efect de ridicare */
                    transition: background-color 0.3s, color 0.3s; /* Efect de tranziție */
                }

                    /* Hover pe opțiuni */
                    #main-menu li a:hover {
                        background-color: #f5f5f5; /* Fundal gri deschis */
                        color: #8B5E3C; /* Text maro deschis */
                    }

        /* Panou dreapta */
        #right-panel {
            margin-left: 250px; /* Compensează lățimea meniului */
            padding: 20px;
            background-color: #ffffff;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <!-- Left Panel -->
    <aside id="left-panel">
        <div class="navbar-header">
            <h1>BookHaven</h1>
            <!-- Admin Image -->
            <img src="~/images/admin.jpg" alt="Admin Logo"> <!-- Imaginea pătrată -->
            <!-- Application Logo -->

        </div>
        <nav id="main-menu">
            <ul>
                <li><a href="/Admin/AdaugareCartiPdf">Adaugare carti pdf</a></li>
                <li><a href="/Admin/AdaugareCartiAudio">Adaugare carti audio</a></li>
                <li><a href="/Admin/VizualizareCartiPdf">Vizualizare carti pdf</a></li>
                <li><a href="/Admin/VizualizareCartiAudio">Vizualizare carti audio</a></li>
                <li><a href="/Admin/GestionareCluburiLectura">Gestionare cluburi lectura</a></li>
                <li><a href="/Admin/VizualizareTeste">Vizualizare quiz-uri</a></li>
                <li><a href="/Admin/VizualizareUtilizatoriInregistrati">Vizualizare utilizatori</a></li>
                <li><a href="/Admin/VizualizareTeste">Vizualizare teste</a></li>
                <li><a href="/Admin/Logout">Delogare</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Right Panel -->
    <div id="right-panel">
        <div class="content">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>