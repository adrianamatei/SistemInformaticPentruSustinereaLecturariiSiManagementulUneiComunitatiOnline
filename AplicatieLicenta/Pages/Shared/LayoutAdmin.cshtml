<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin/AddBook">Adăugare Cărți</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ViewBooks">Vizualizare Cărți</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/SiteActivity">Vizualizare Activitate Site</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <header class="d-flex justify-content-between align-items-center py-3">
                    <h1>@ViewData["Title"]</h1>
                    <a class="btn btn-danger" href="/Account/Logout">Logout</a>
                </header>
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
</body>
</html>
