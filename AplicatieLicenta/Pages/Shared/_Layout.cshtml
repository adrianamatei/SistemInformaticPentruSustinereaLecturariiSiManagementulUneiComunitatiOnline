<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookHaven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookHaven.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <style>
        .custom-navbar {
            width: 100%;
            background-color: #ffffff;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            top: 0;
            z-index: 1000;
            height: 70px;
            justify-content: center;
        }

        .custom-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .custom-brand {
            font-family: 'Georgia', serif;
            font-size: 1.8rem;
            color: #C8AD7F;
            font-weight: bold;
            text-decoration: none;
            margin-right: auto;
        }

            .custom-brand:hover {
                color: #C8A57D;
            }

        .custom-nav-items {
            display: flex;
            gap: 18px;
            list-style: none;
            margin: 0;
            padding: 0;
            align-items: center;
            margin-left: auto;
        }

        .custom-nav-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #333;
            font-size: 0.95rem; 
            font-weight: 500;
            line-height: 1;
            transition: color 0.3s ease;
        }

            .custom-nav-link img {
                width: 22px;
                height: 22px;
                margin-right: 6px; 
                object-fit: contain;
                display: block;
            }


            .custom-nav-link:hover {
                color: #C8A57D;
            }

        body {
            margin: 0;
            padding-top: 80px;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .border-top.footer.text-muted {
            font-size: 0.8rem;
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            padding: 0.5rem 0;
            border-top: 1px solid #ddd;
            text-align: center;
            z-index: 10;
        }
    </style>
</head>
<body>
    <header>
        <nav class="custom-navbar">
            <div class="custom-container">
                <a href="/Index" class="custom-brand">BookHaven</a>

                <div class="custom-nav-items">
                    <a href="/Login" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/loginreader.png" alt="Login" />
                        <span>Autentificare</span>
                    </a>
                    <a href="/Users/VizualizarePDF" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/cartipdf.png" alt="Carti PDF" />
                        <span>Carti PDF</span>
                    </a>
                    <a href="/Users/VizualizareAudio" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/cartiaudio.png" alt="Carti Audio" />
                        <span>Carti Audio</span>
                    </a>
                    <a href="/ChatBot" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/chatbot.png" alt="ChatBot" />
                        <span>ChatBot</span>
                    </a>
                    <a href="/Recenzii" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/review.png" alt="Recenzii" />
                        <span>Recenzii</span>
                    </a>
                    <a href="/AboutUs" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/about_us.png" alt="AboutUs" />
                        <span>Despre</span>
                    </a>
                    <a href="/Contact" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/contact.png" alt="Contact" />
                        <span>Contact</span>
                    </a>
                    <a href="/Users/StartUser" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/contulMeu.jpeg" alt="Contul meu" />
                        <span>Contul meu</span>
                    </a>
                    <a href="/Users/Logout" class="custom-nav-link">
                        <img src="~/images/MeniuNavigare/logout.jpeg" alt="Logout" />
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookHaven - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
