@page
@model AplicatieLicenta.Pages.Users.DetaliiAudioModel
@{
}
<div class="container py-4">
    <div class="row">
        <!-- IMAGINE + CONTROALE AUDIO -->
        <div class="col-md-5 text-center">
            <div class="position-relative mb-3">
                <img src="@Model.Carte.ImagineCoperta"
                     alt="Coperta"
                     class="img-fluid rounded shadow"
                     style="max-height: 400px; object-fit: contain;" />
            </div>

            <!-- PLAYER AUDIO -->
            <audio id="audioPlayer" src="@Model.Carte.UrlFisier"></audio>

            <div class="d-flex justify-content-center gap-3 mt-3">
                <button class="btn text-white px-4 py-2 fw-bold rounded-pill"
                        style="background-color: #C8AD7F;"
                        onclick="document.getElementById('audioPlayer').play()">
                    Start
                </button>

                <button class="btn text-white px-4 py-2 fw-bold rounded-pill"
                        style="background-color: #C8AD7F;"
                        onclick="document.getElementById('audioPlayer').pause()">
                    Pauză
                </button>
            </div>

            <!-- BUTON TESTARE -->
            <div class="mt-4">
                <a class="btn text-white px-4 py-2 fw-bold rounded-pill"
                   style="background-color: #C8AD7F;"
                   href="/Users/TesteazaInteligenta?idCarte=@Model.Carte.IdCarte">
                    Testează-ți înțelegera cărții
                </a>
            </div>
        </div>

        <!-- DETALII CARTE + RECENZII + FORM -->
        <div class="col-md-7">
            <h1 class="fw-bold">@Model.Carte.Titlu</h1>

            <p>
                <span class="fw-bold" style="color:#C8AD7F;">Autor:</span> @Model.Carte.Autor
            </p>
            <p>
                <span class="fw-bold" style="color:#C8AD7F;">Categorie de vârstă:</span>
                @string.Join(", ", Model.Carte.CategoriiVarsta.Select(c => c.Denumire))
            </p>
            <p>
                <span class="fw-bold" style="color:#C8AD7F;">Durată ascultare:</span> @Model.Carte.DurataAscultare
            </p>

            <!-- CHENAR RECENZII STILIZAT -->
            <div class="border rounded p-4 mt-4" style="max-height: 250px; overflow-y: auto; background-color: #f0e6d2; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
                <h5 class="fw-bold mb-3" style="color: #C8AD7F;">Recenzii recente:</h5>
                @if (Model.Recenzii != null && Model.Recenzii.Any())
                {
                    foreach (var recenzie in Model.Recenzii)
                    {
                        <div class="mb-3">
                            <p class="mb-1"><strong>@recenzie.EmailUtilizator</strong> a scris:</p>
                            <p class="mb-1">@recenzie.Comentariu</p>
                            <p class="mb-1">Rating: @recenzie.Rating / 5</p>
                            <small class="text-muted">@recenzie.DataPublicarii.ToString()</small>
                        </div>
                        <hr />
                    }
                }
                else
                {
                    <p class="text-muted">Nu există recenzii pentru această carte.</p>
                }
            </div>

            <!-- FORMULAR ADAUGARE RECENZIE MUTAT JOS -->
            <div class="mt-4">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Comentariu:</label>
                        <textarea name="Comentariu" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Rating:</label>
                        <select name="Rating" class="form-select w-50" required>
                            <option value="5">5 - Excelent</option>
                            <option value="4">4 - Foarte bun</option>
                            <option value="3">3 - Bun</option>
                            <option value="2">2 - Slab</option>
                            <option value="1">1 - Foarte slab</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn text-white px-4 py-2 fw-bold rounded-pill" style="background-color: #C8AD7F;">
                            Trimite recenzia
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
