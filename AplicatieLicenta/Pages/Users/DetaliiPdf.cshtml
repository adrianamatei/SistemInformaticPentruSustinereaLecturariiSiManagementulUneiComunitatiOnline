@page
@model AplicatieLicenta.Pages.Users.DetaliiPdfModel
@{
}
<div class="container py-4">
    <div class="row">
        <!-- Imaginea -->
        <div class="col-md-5 text-center">
            <img src="@Model.Carte.ImagineCoperta"
                 class="img-fluid rounded shadow"
                 alt="@Model.Carte.Titlu"
                 style="max-height: 450px; object-fit: contain;" />

            <!-- Butoane sub imagine -->
            <div class="mt-3 d-flex justify-content-center gap-3">
                <a class="btn text-white px-4 py-2 fw-bold rounded-pill"
                   style="background-color: #C8AD7F;"
                   target="_blank"
                   href="@Model.Carte.UrlFisier">
                    Deschide PDF
                </a>

                <a class="btn text-white px-4 py-2 fw-bold rounded-pill"
                   style="background-color: #C8AD7F;"
                   href="/Users/TesteCarte?idCarte=@Model.Carte.IdCarte">
                    Testează-ți înțelegerea cărții
                </a>
            </div>
        </div>

        <!-- Detalii -->
        <div class="col-md-7">
            <h1 class="fw-bold">@Model.Carte.Titlu</h1>

            <p>
                <span class="fw-bold" style="color:#C8AD7F;">Autor:</span>
                @Model.Carte.Autor
            </p>

            <p>
                <span class="fw-bold" style="color:#C8AD7F;">Categorie de vârstă:</span>
                @string.Join(", ", Model.Carte.CategoriiVarsta.Select(c => c.Denumire))
            </p>

            <!-- Chenar recenzii -->
            <div class="border rounded p-3 mt-4" style="max-height: 200px; overflow-y: auto; background-color: #f8f8f8;">
                <h5 class="fw-bold mb-2">Recenzii recente:</h5>
                @if (Model.Recenzii != null && Model.Recenzii.Any())
                {
                    foreach (var recenzie in Model.Recenzii)
                    {
                        <div class="mb-2">
                            <p class="mb-1"><strong>@recenzie.EmailUtilizator</strong> a scris:</p>
                            <p class="mb-1">@recenzie.Comentariu</p>
                            <p class="mb-1">Rating: @recenzie.Rating / 5</p>
                            <small class="text-muted">@recenzie.DataPublicarii.ToString()</small>
                        </div>
                        <hr />
                    }
                }
                else
                {
                    <p class="text-muted">Nu există recenzii pentru această carte.</p>
                }
            </div>

            <!-- Formular recenzie -->
            <div class="mt-4">
                <form method="post">
                    <div class="mb-2">
                        <label class="form-label fw-bold">Comentariu:</label>
                        <textarea name="Comentariu" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label fw-bold me-3">Rating:</label>
                        <select name="Rating" class="form-select w-25" required>
                            <option value="5">5 - Excelent</option>
                            <option value="4">4 - Foarte bun</option>
                            <option value="3">3 - Bun</option>
                            <option value="2">2 - Slab</option>
                            <option value="1">1 - Foarte slab</option>
                        </select>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn text-white px-4 py-2 fw-bold rounded-pill" style="background-color: #C8AD7F;">
                            Trimite recenzia
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
